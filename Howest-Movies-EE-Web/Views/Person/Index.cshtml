
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_master.cshtml";
}
@model ListPeopleViewModel
<h1>People</h1>
<ul class="actors">
    <li class="add">
        <a asp-action="AddPerson" asp-controller="Person">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4V7zm-1-5C6.49 2 2 6.49 2 12s4.49 10 10 10 10-4.49 10-10S17.51 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" /><path d="M0 0h24v24H0z" fill="none" /></svg>
            <p>Add a person</p>
        </a>


    </li>
    @foreach (PersonViewModel actor in Model.People)
    {
        <li class="person">
            <img src="~/media/images/profile.jpg" title="@actor.Name" alt="@actor.Name" /><p>@actor.Name</p>
            <div class="movie-options">
                <a asp-action="Edit" asp-controller="Person" asp-route-id="@actor.Id"><svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" /><path d="M0 0h24v24H0z" fill="none" /></svg></a>
                <a asp-action="Delete" asp-controller="Person" asp-route-id="@actor.Id" class="delete"><svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z" /><path d="M0 0h24v24H0z" fill="none" /></svg></a>

            </div>
        </li>
    }
</ul>


@section title{
    People
}
